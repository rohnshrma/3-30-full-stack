<!-- Declare the document type as HTML5 -->
<!DOCTYPE html>
<!-- Define the HTML document with English as the language -->
<html lang="en">
  <head>
    <!-- Set the character encoding to UTF-8 for proper text rendering -->
    <meta charset="UTF-8" />
    <!-- Ensure responsive design by setting the viewport to scale with device width -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Set the page title, dynamically including the 'today' variable (e.g., "TO DO LIST 8/25/2025") -->
    <!-- The <%= today %> syntax embeds the 'today' variable passed from the Express server -->
    <title>TO DO LIST <%= today %></title>
    <!-- Include Bootstrap CSS from a CDN for pre-built styling and responsive design -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    />
    <!-- Include a custom CSS file (style.css) from the 'public' directory for additional styling -->
    <!-- Served via express.static middleware in the Express server -->
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <!-- Header section with a dark background, white text, rounded corners, and shadow -->
    <!-- Uses Bootstrap classes for styling (bg-dark, text-light, rounded, shadow-lg, etc.) -->
    <div
      id="header"
      class="bg-dark text-light rounded shadow-lg py-3 px-5 m-5 text-center"
    >
      <!-- Display the main heading for the to-do list -->
      <h1>To Do List</h1>
    </div>

    <!-- Form to submit new tasks, sending a POST request to the root URL ("/") -->
    <!-- Styled with Bootstrap classes for dark background, padding, margins, and flexbox layout -->
    <form
      action="/"
      method="post"
      class="rounded bg-dark text-light m-5 py-3 px-5 d-flex justify-content-between align-items-center"
    >
      <!-- Input field for entering new tasks, styled with Bootstrap's form-control class -->
      <!-- The 'name="new_item"' attribute matches the key used in the Express server's req.body -->
      <input
        class="form-control"
        type="text"
        name="new_item"
        placeholder="Enter new Item..."
      />
      <!-- Submit button styled with Bootstrap's btn and btn-light classes -->
      <button class="btn btn-light">ADD +</button>
    </form>

    <!-- Container for displaying the task list, styled with dark background and margins -->
    <div class="bg-dark text-light rounded m-5 py-3">
      <!-- EJS conditional to check if the 'data' array (tasks) has any items -->
      <% if(data.length > 0){ %>
      <!-- Loop through the 'data' array (tasks) using EJS forEach, with item and index -->
      <% data.forEach((item , index)=>{ %>
      <!-- Display each task in a div with a border, using flexbox for layout -->
      <div
        class="px-3 py-2 border-bottom d-flex justify-content-between align-items-center"
      >
        <!-- Display the task text, escaped by <%= to prevent XSS attacks -->
        <%= item %> // Link to delete the task, using the index in the URL // //
        // Styled as a Bootstrap button (btn btn-light)
        <a class="btn btn-light" href="/delete/<%= index %>">Delete</a>
      </div>
      // Close the forEach loop <% }) %> // If no tasks exist, display a message
      <% }else{ %> // Centered message indicating no tasks, styled with
      Bootstrap classes
      <h2 class="m-0 text-center">NO TASKS FOUND</h2>
      // Close the if-else block <% } %>
    </div>
  </body>
</html>
